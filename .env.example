# .env.example - Copy this to .env and fill in your values

# Site Domain (update after domain registration)
PUBLIC_SITE_DOMAIN=https://your-domain.com

# Amazon Affiliate Tags by Region
# Update these after Amazon Associates approval for each marketplace
PUBLIC_AMAZON_TAG_US=hardwarelab-20
PUBLIC_AMAZON_TAG_DE=hardwarelab-03
PUBLIC_AMAZON_TAG_FR=hardwarelab-21

# Google Analytics 4 Measurement ID
PUBLIC_GA_ID=G-XXXXXXXXXX

# Enable/disable analytics (set to false for local development)
PUBLIC_ANALYTICS_ENABLED=true
