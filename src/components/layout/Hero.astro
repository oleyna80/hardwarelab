---
import { t } from "../../utils/i18n";

export interface Props {
  lang?: "en" | "fr" | "ru";
  title?: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
  featured?: boolean;
}

const {
  lang = "en",
  title,
  subtitle,
  ctaText,
  ctaLink = "/reviews",
  featured = false,
} = Astro.props;

const heroTitle = title || t("heroTitle", lang);
const heroSubtitle = subtitle || t("heroSubtitle", lang);
const heroCtaText = ctaText || t("ctaButton", lang);
---

<section class="relative py-12 md:py-20 overflow-hidden">
  <div
    class="absolute inset-0 bg-gradient-to-br from-accent-500/10 to-primary-500/5 dark:from-accent-600/5 dark:to-primary-600/10 -z-10"
  >
  </div>

  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center">
      {
        featured && (
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-accent-100 dark:bg-accent-900/30 text-accent-700 dark:text-accent-300 mb-6">
            <span class="text-sm font-medium">{t("featured", lang)}</span>
          </div>
        )
      }

      <h1
        class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight mb-6"
      >
        {heroTitle}
      </h1>

      <p
        class="text-xl md:text-2xl text-primary-600 dark:text-primary-400 mb-10 max-w-2xl mx-auto"
      >
        {heroSubtitle}
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={ctaLink}
          class="inline-flex items-center justify-center px-8 py-3 text-base font-medium rounded-lg bg-accent-600 text-white hover:bg-accent-700 transition-colors shadow-lg hover:shadow-xl"
        >
          {heroCtaText}
          <svg
            class="ml-2 w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        </a>

        <a
          href="/categories"
          class="inline-flex items-center justify-center px-8 py-3 text-base font-medium rounded-lg border-2 border-primary-300 dark:border-primary-700 text-primary-700 dark:text-primary-300 hover:border-primary-400 dark:hover:border-primary-600 transition-colors"
        >
          {t("categories", lang)}
        </a>
      </div>

      <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
        <div class="p-4">
          <div class="text-3xl font-bold text-accent-600 dark:text-accent-500">
            150+
          </div>
          <div class="text-sm text-primary-600 dark:text-primary-400 mt-1">
            {lang === "ru" ? "Обзоров" : lang === "fr" ? "Avis" : "Reviews"}
          </div>
        </div>
        <div class="p-4">
          <div class="text-3xl font-bold text-accent-600 dark:text-accent-500">
            24/7
          </div>
          <div class="text-sm text-primary-600 dark:text-primary-400 mt-1">
            {
              lang === "ru"
                ? "Обновления"
                : lang === "fr"
                  ? "Mises à jour"
                  : "Updates"
            }
          </div>
        </div>
        <div class="p-4">
          <div class="text-3xl font-bold text-accent-600 dark:text-accent-500">
            98%
          </div>
          <div class="text-sm text-primary-600 dark:text-primary-400 mt-1">
            {
              lang === "ru"
                ? "Точность"
                : lang === "fr"
                  ? "Précision"
                  : "Accuracy"
            }
          </div>
        </div>
        <div class="p-4">
          <div class="text-3xl font-bold text-accent-600 dark:text-accent-500">
            10k+
          </div>
          <div class="text-sm text-primary-600 dark:text-primary-400 mt-1">
            {
              lang === "ru"
                ? "Читателей"
                : lang === "fr"
                  ? "Lecteurs"
                  : "Readers"
            }
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Decorative elements -->
  <div
    class="absolute top-10 left-10 w-20 h-20 bg-accent-400/10 rounded-full blur-xl -z-10"
  >
  </div>
  <div
    class="absolute bottom-10 right-10 w-32 h-32 bg-primary-400/10 rounded-full blur-xl -z-10"
  >
  </div>
</section>
