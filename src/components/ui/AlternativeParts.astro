---
import AffiliateButton from "./AffiliateButton.astro";

interface Props {
    parts: {
        name: string;
        asin: string;
        reason: string;
    }[];
}

const { parts } = Astro.props;
---

<div
    class="my-8 p-6 bg-blue-50 dark:bg-blue-900/10 border border-blue-200 dark:border-blue-800 rounded-xl"
>
    <h3
        class="text-xl font-bold mb-4 flex items-center gap-2 text-blue-800 dark:text-blue-300"
    >
        <span>ðŸ”„</span> Alternative Options
    </h3>
    <div class="space-y-4">
        {
            parts.map((part) => (
                <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 py-3 border-b border-blue-100 dark:border-blue-800/50 last:border-0">
                    <div>
                        <div class="font-bold text-zinc-900 dark:text-zinc-200">
                            {part.name}
                        </div>
                        <div class="text-sm text-zinc-600 dark:text-zinc-400">
                            {part.reason}
                        </div>
                    </div>
                    <AffiliateButton
                        asin={part.asin}
                        label="View Info"
                        size="sm"
                        variant="secondary"
                    />
                </div>
            ))
        }
    </div>
</div>
