---
interface Props {
    title?: string;
    url?: string;
    description?: string;
}

const {
    title = "Check out this review on HardwareLab",
    url = Astro.url.href,
    description = "",
} = Astro.props;

const encodedTitle = encodeURIComponent(title);
const encodedUrl = encodeURIComponent(url);
const encodedDescription = encodeURIComponent(description);

const shareLinks = [
    {
        name: "Twitter / X",
        url: `https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`,
        icon: "twitter",
        color: "hover:text-black dark:hover:text-white",
    },
    {
        name: "Facebook",
        url: `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`,
        icon: "facebook",
        color: "hover:text-[#1877F2]",
    },
    {
        name: "LinkedIn",
        // LinkedIn often ignores parameters in favor of OG tags, but summary can sometimes help
        url: `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}&summary=${encodedDescription}`,
        icon: "linkedin",
        color: "hover:text-[#0A66C2]",
    },
    {
        name: "Reddit",
        url: `https://reddit.com/submit?url=${encodedUrl}&title=${encodedTitle}`,
        icon: "reddit",
        color: "hover:text-[#FF4500]",
    },
    {
        name: "Telegram",
        url: `https://t.me/share/url?url=${encodedUrl}&text=${encodedTitle}%0A${encodedDescription}`,
        icon: "telegram",
        color: "hover:text-[#26A5E4]",
    },
    {
        name: "WhatsApp",
        url: `https://api.whatsapp.com/send?text=${encodedTitle}%0A${encodedDescription}%20${encodedUrl}`,
        icon: "whatsapp",
        color: "hover:text-[#25D366]",
    },
];
---

<div
    class="flex flex-col gap-4 py-6 border-t border-primary-200 dark:border-primary-800"
>
    <h3 class="text-lg font-semibold text-primary-900 dark:text-primary-100">
        Share this review
    </h3>

    <div class="flex flex-wrap gap-4">
        {
            shareLinks.map((link) => (
                <a
                    href={link.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class={`
          p-3 rounded-full bg-primary-100 dark:bg-primary-800 
          text-primary-600 dark:text-primary-400
          transition-all duration-300 hover:scale-110 hover:shadow-lg
          ${link.color}
        `}
                    aria-label={`Share on ${link.name}`}
                >
                    <svg
                        class="w-6 h-6 fill-current"
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        {link.icon === "twitter" && (
                            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
