---
interface Props {
  specs: Record<string, string>;
}

const { specs } = Astro.props;

// Преобразуем объект в массив для отображения
const specEntries = Object.entries(specs);
---

<div class="spec-grid w-full">
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
    {
      specEntries.map(([label, value], index) => (
        <div
          class="
                    border border-zinc-700 dark:border-zinc-600
                    rounded-lg p-4 transition-all duration-300
                    bg-zinc-900/30 dark:bg-zinc-900/50
                    hover:border-cyan-500/50 dark:hover:border-cyan-400/50
                    hover:shadow-lg hover:shadow-cyan-900/20
                    backdrop-blur-sm
                "
          role="row"
        >
          <div class="flex flex-col">
            <div class="font-medium text-zinc-400 dark:text-zinc-300 text-sm uppercase tracking-wider mb-2">
              {label}
            </div>
            {/* Используем font-mono, так как мы настроили JetBrains Mono в конфиге */}
            <div class="font-mono font-semibold text-white dark:text-zinc-100 text-lg">
              {value}
            </div>
          </div>
          <div class="mt-3 pt-3 border-t border-zinc-800 dark:border-zinc-700">
            <div class="flex items-center text-xs text-zinc-500 dark:text-zinc-400">
              <svg
                class="w-3 h-3 mr-1"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                  clip-rule="evenodd"
                />
              </svg>
              <span>SPEC #{index + 1}</span>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  .spec-grid {
    container-type: inline-size;
  }

  @container (max-width: 640px) {
    .spec-grid .grid {
      grid-template-columns: 1fr !important;
    }
  }

  /* Tech/Cyberpunk glow effect */
  .spec-grid .grid > div {
    position: relative;
    overflow: hidden;
  }

  .spec-grid .grid > div::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(6, 182, 212, 0.5),
      transparent
    );
    animation: scanline 3s linear infinite;
  }

  @keyframes scanline {
    0% {
      left: -100%;
    }
    100% {
      left: 100%;
    }
  }
</style>
