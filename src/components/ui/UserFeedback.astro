---

<div class="grid grid-cols-1 md:grid-cols-2 gap-4 my-8 not-prose">
    {
        feedback.map((item) => (
            <div
                class={`p-4 rounded-lg border ${bgColors[item.sentiment]} shadow-sm`}
            >
                <div class="flex items-center gap-2 mb-2">
                    <span
                        class="text-xl"
                        role="img"
                        aria-label={item.sentiment}
                    >
                        {icons[item.sentiment]}
                    </span>
                    <span class="text-xs font-bold uppercase tracking-wider opacity-70">
                        {item.user}
                    </span>
                </div>
                <p class="text-sm italic text-zinc-700 dark:text-zinc-300">
                    "{item.comment}"
                </p>
            </div>
        ))
    }
</div>
