---
interface Props {
    feedback: {
        user: string; // –ù–∞–ø—Ä–∏–º–µ—Ä "Reddit User (r/homelab)" –∏–ª–∏ "Amazon Purchaser"
        comment: string;
        sentiment: "positive" | "negative" | "neutral";
    }[];
}

const { feedback } = Astro.props;

const icons = {
    positive: "üëç",
    negative: "‚ö†Ô∏è",
    neutral: "‚ÑπÔ∏è",
};

const bgColors = {
    positive:
        "bg-green-50 dark:bg-green-900/20 border-green-100 dark:border-green-800",
    negative: "bg-red-50 dark:bg-red-900/20 border-red-100 dark:border-red-800",
